# Environment variables for cloud deployment
# Copy this file to .env and fill in the actual values

# Database Configuration
# Set a strong password for the PostgreSQL database
DB_PASSWORD=your_secure_database_password_here

# Database connection settings (defaults match docker-compose.cloud.yml)
DB_HOST=driving_schools_db
DB_PORT=5432
DB_NAME=driving_schools
DB_USER=scraper_user

# API Configuration  
# Set your API key for external services (if needed)
API_KEY=your_api_key_here

# Optional: Set log level for debugging
# LOG_LEVEL=INFO

# Optional: Set scraping intervals or other configuration
# SCRAPE_INTERVAL=3600
